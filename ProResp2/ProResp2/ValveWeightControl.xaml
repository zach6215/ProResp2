<UserControl x:Class="ProResp2.ValveWeightControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProResp2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding ValveNum, StringFormat='Valve {0}'}"></TextBlock>
        <TextBox x:Name="textBox" MinWidth="10" MaxLines="1" Grid.Column="1" Text="{Binding Weight, Mode=TwoWay}"></TextBox>
    </Grid>
</UserControl>
